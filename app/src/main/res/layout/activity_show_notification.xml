<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kasembhundit.kutthareeya.thiti.manageres.ShowNotification">

    <LinearLayout
android:padding="@dimen/dp100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin30"
        android:layout_marginRight="@dimen/margin30"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:padding="@dimen/dp10"
            android:id="@+id/imvhome"
            android:src="@drawable/home"
            android:layout_width="match_parent"
            android:layout_height="90dp" />

        <ImageView
            android:src="@drawable/food"
            android:layout_width="169dp"
            android:layout_height="165dp" />


        <TextView
            android:padding="@dimen/dp10"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="อาหารของคุณเสร็จแล้วค่ะ"
            android:textSize="@dimen/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <ImageView

            android:layout_width="200dp"
            android:layout_height="170dp"
            android:id="@+id/imvorder"
            android:padding="@dimen/dp25"
            android:src="@drawable/ic_oder" />


    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>




</RelativeLayout>
